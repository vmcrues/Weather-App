<div class="mdl-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-color-text--primary">
    <h1 class="mdl-card__title-text">Forecast for <%= @location %>:</h1>
  </div>
    <div class="mdl-card__supporting-text mdl-grid">
      <div class="mdl-cell mdl-cell--7-col">
          <p> Temperature: <%= @temp_f %> 째F / <%= @temp_c %> 째C </p>
          <p> Feels like: <%= @feels_like_f %> 째F / <%= @feels_like_c %> 째C </p>
      </div>
      <div class="mdl-cell mdl-cell--5-col">
        <p>
            <%= image_tag @weather_icon %> <br>
            <%= @weather_words %>
        </p>
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <%= link_to "Full forecast", @forecast_link, target: "_blank", class: "mdl-button mdl-button--accent mdl-js-button" %>
    </div>
</div>
